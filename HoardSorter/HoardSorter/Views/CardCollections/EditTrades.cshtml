@model HoardSorter.Models.CardCollection

@{
    ViewBag.Title = "EditTrades";
}

<h2>Edit MyTrades</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CardCollectionID)

    <div class="form-group">        
        <div class="col-md-10">
            <h4>
                @Html.DisplayFor(model => model.CardDetails.CardName)
            </h4>
            @Html.HiddenFor(model => model.CardID)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ToTrade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.ToTrade)
                @Html.ValidationMessageFor(model => model.ToTrade, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.OwnedQty)
            @Html.ValidationMessageFor(model => model.OwnedQty, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TradeQty, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TradeQty, new { htmlAttributes = new { @class = "form-control", @min = "0", @max = Model.OwnedQty } })
            @Html.ValidationMessageFor(model => model.TradeQty, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to MyTrades", "MyTrades") |
    @Html.ActionLink("Back to Create Trade", "CreateTrade")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
