@model IEnumerable<HoardSorter.Models.CardCollection>

@{
    ViewBag.Title = "Index";
}

<h2>Personal Hoard</h2>

<p>
    @Html.ActionLink("Create New", "Create") |

    @Html.ActionLink((string)ViewBag.NameLabel , "Index", new { sortOrder = ViewBag.NameSortParm }) |
    @Html.ActionLink((string)ViewBag.CostLabel, "Index", new { sortOrder = ViewBag.CostSortParm }) |
    @Html.ActionLink((string)ViewBag.QuantityLabel, "Index", new { sortOrder = ViewBag.QtySortParm })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardDetails.CardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnedQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardDetails.ConvertedManaCost)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (item.OwnedQty > 0)
        {
            <td>
                @Html.DisplayFor(modelItem => item.CardDetails.CardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnedQty)
            </td>
            if(item.CardDetails.ConvertedManaCost == null)
            {
                <td>
                    -
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.CardDetails.ConvertedManaCost)
                </td>
            }
            <td>
                @Html.ActionLink("Card Details", "Details", new { id = item.CardCollectionID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.CardCollectionID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CardCollectionID })
            </td>
        }
    </tr>
}

</table>
